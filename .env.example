# Server
PORT=3000
NODE_ENV=development
CORS_ORIGINS=http://localhost:5173
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
JSON_BODY_LIMIT=1mb

# Auth & security
PASSWORD_PEPPER=replace-me
ACCESS_TOKEN_SECRET=replace-access-secret
REFRESH_TOKEN_SECRET=replace-refresh-secret
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=1
AUTH_FAILURE_THRESHOLD=5
AUTH_BLOCK_DURATION_MS=900000

# Cloudflare R2 (media bucket)
CLOUDFLARE_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxx
R2_BUCKET_NAME=media-bucket-name
R2_ACCESS_KEY=media-access-key
R2_SECRET_KEY=media-secret-key
PRESIGNED_URL_TTL_SECONDS=300
MULTIPART_URL_TTL_SECONDS=900

# Cloudflare R2 (structured data bucket)
R2_DATA_BUCKET_NAME=volleyplus-storage
R2_DATA_ACCESS_KEY=data-access-key
R2_DATA_SECRET_KEY=data-secret-key
DOWNLOAD_TOKEN_TTL_SECONDS=300
